{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es6",
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "es6",
    "allowJs": false,
    "baseUrl": "./",
    "lib": ["es2017"],
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@src*": ["src*"]
    },
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "./src/"
  ],
  "inlineSources": true,
  "inlineSourceMap": true,
  "exclude": [
    "test/**/*"
  ],
}
